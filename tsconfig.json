{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "target": "ES6",
    "lib": ["es6"],
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
